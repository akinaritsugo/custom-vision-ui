<!DOCTYPE html>
<html lang="ja">

<head>
  <%- include("./_share/metadata.ejs") %>
    <title>Trainings</title>
    <%- include("./_share/stylesheets.ejs") %>
</head>

<body>
  <!-- <div class="position-relative w-100 h-100"> -->
  <div class="">
    <%- include("./_share/header.ejs") %>
    <div class="container-fluid">
      <div class="mt-3 mb-3">
        <button class="btn btn-outline-success" id="btnIterationExecute">新規トレーニング</button>
      </div>
      <table class="table table-bordered table-sm">
        <tr>
          <th class="col-sm-3">ID</th>
          <th class="col-sm-3">Name</th>
          <th class="col-sm-2">Status</th>
          <th class="col-sm-2">Publish Name</th>
          <th class="col-sm-2"></th>
        </tr>
        <% for (let item of locals.iterations) {%>
          <tr>
            <td class="align-middle"><%= item.id %></td>
            <td class="align-middle"><%= item.name %></td>
            <td class="align-middle"><%= item.status %></td>
            <td class="align-middle"><%= item.publishName %></td>
            <td class="align-middle">
              <% if (item.status === 'Completed') { %>
                <% if (item.publishName) { %>
                <form class="d-inline-block" name="frmIterationUnpublish">
                  <input type="hidden" name="id" value="<%= item.id %>" />
                  <button type="submit" class="btn btn-outline-secondary" name="btnIterationUnpublish"><i class="fas fa-eye-slash"></i> 非公開</i></button>
                </form>
                <% } else {%>
                <form class="d-inline-block" name="frmIterationPublish">
                  <input type="hidden" name="id" value="<%= item.id %>" />
                  <button type="submit" class="btn btn-outline-primary" name="btnIterationPublish"><i class="fas fa-eye"></i> 公開</i></button>
                </form>
                <form class="d-inline-block" name="frmIterationDelete">
                  <input type="hidden" name="id" value="<%= item.id %>" />
                  <button type="submit" class="btn btn-outline-danger" name="btnIterationDelete"><i class="far fa-trash-alt"></i> 削除</button>
                </form>
                <% } %>
              <% } %>
            </td>
          </tr>
        <% } %>
      </table>
    </div>
    <!-- <footer class="fixed-bottom p-3 bg-light">Hands-on Lab</footer> -->
  </div>
  <%- include("./_share/javascripts.ejs") %>
  <script src="/public/javascripts/trainings.js"></script>
</body>

</html>